  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>SinatraBucketlistApp</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
  
    <header>
      <nav>
        <ul class="nav_links">
          <% if logged_in? %>
            <li><a href="/">My Bucket List</a></li>
            <li><a href="/goals/new">New Goal</a></li>
            <li><a href="/goals">All Goals</a></li>
          <% end %>
        </ul>
      </nav>
      <% if logged_in? %>
        <a class="logout_button" href="/logout"><button>Log out</button></a>
      <% end %>
    </header>

    <div class="wrapper">
    <% if flash[:messages] %>
      <h5 style="color: green;"><%= flash[:messages] %></h5>
      <br>
    <% end %>

    <% if flash[:errors] %>
      <h5 style="color: red;"><%= flash[:errors] %></h5>
      <br>
    <% end %>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>SinatraBucketlistApp</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
