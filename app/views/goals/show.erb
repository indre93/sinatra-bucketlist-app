<h2>Goal: </h2>

  <h3><%= @goal.title %></h3>
  <h5>Posted on <%= @goal.formatted_created_at %></h5>
  <h5><a href="/users/<%= @goal.user.id %>">By: <%= @goal.user.name %></a></h5>
  <p><%= @goal.description %></p>
  
  <% if @goal.completed? %>
    <label><b>Completed? </b></label>YES!
  <% else %>
    <label><b>Completed? </b></label>NOPE
  <% end %> 

<% if authorized_to_edit?(@goal) %>
<br><br>
  <a href="/goals/<%= @goal.id %>/edit">Edit</a>
  <br><br>
  <form action="/goals/<%= @goal.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete Goal" id="Delete Goal">
  </form>
<% end %>
