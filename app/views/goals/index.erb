<h2>All Goals</h2>

<% @goals.each do |goal| %>
  <h4><a href="/goals/<%= goal.id %>"><%= goal.title %></a></h4>
  <h6>Created: <%= goal.created_at %></h6>
  <h5>By: <%= goal.user.name %></h5>
  <%= goal.description %></br>

  <% if goal.completed? %>
    <h3>Completed? </h3>YES!
  <% else %>
    <h3>Completed? </h3>NOPE
  <% end %>  

  <br><br>
<% end %>